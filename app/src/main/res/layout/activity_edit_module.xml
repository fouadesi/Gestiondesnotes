<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content"
    tools:context=".EditModule">
        <EditText
            android:hint="Nom"
            android:background="@drawable/search_outline"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/nom_du_module_edit"
            android:layout_height="wrap_content" />


        <EditText
            android:background="@drawable/search_outline"
            android:layout_marginTop="5dp"
        android:hint="Coefficient "
            android:inputType="number"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:id="@+id/coefficient_edit"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="Note eliminatoire"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_outline"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/note_eliminatoire_edit"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="Test 1"
            android:layout_marginTop="5dp"

            android:background="@drawable/search_outline"
            android:layout_width="match_parent"
            android:inputType="number"
            android:padding="10dp"
            android:id="@+id/test1_edit"
            android:layout_height="wrap_content" />

        <EditText
            android:background="@drawable/search_outline"
            android:layout_marginTop="5dp"
  android:text="Test 2"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/test2_edit"
            android:layout_height="wrap_content" />


        <EditText
            android:text="Participation"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_outline"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/participation_edit"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="5dp"
            android:hint="Abscence"
            android:background="@drawable/search_outline"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:inputType="number"
            android:id="@+id/abscence_edit"
            android:layout_height="match_parent" />
    <Button

        android:onClick="Update"

        android:id="@+id/edit"
        android:text="modifier"
        android:background="@drawable/search_outline"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>