<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:elevation="5dp"
    android:paddingTop="20dp"
    android:background="@drawable/bg2"
    android:layout_marginTop="8dp">

    <TextView
        android:layout_marginTop="13dp"
        android:id="@+id/nom_du_groupe_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Group :"
        android:textColor="@android:color/black"
        android:textSize="20dp" />
    <TextView
        android:fontFamily="@font/montserrat_alternates"
        android:layout_below="@+id/nom_du_groupe_listview"
        android:id="@+id/niveau_du_groupe_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Niveau :"
        android:textSize="15sp" />
    <ImageButton
        android:layout_marginTop="70dp"
        android:layout_marginEnd="220dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/delete_groupe_icon_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_trash" />
    <ImageButton
        android:layout_marginTop="70dp"
        android:layout_marginEnd="300dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/update_groupe_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pencil" />
    <ImageButton
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etudiant_listview"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:background="@drawable/ic_registration"
        android:layout_height="wrap_content" />

</RelativeLayout>
