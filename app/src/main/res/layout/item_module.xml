<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:elevation="10dp"
    android:paddingTop="21dp"
    android:background="@drawable/bg">
<!--    <View-->
<!--        android:background="@color/colorAccent"-->
<!--        android:layout_marginTop="1dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp" />-->
    <TextView
        android:id="@+id/nom_du_module_listview"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingStart="15dp"
        android:fontFamily="@font/montserrat_alternates"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />
    <TextView
        android:fontFamily="@font/montserrat_alternates"
        android:layout_below="@+id/nom_du_module_listview"
        android:id="@+id/coefficient_module_listview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingStart="20dp"

        android:layout_marginTop="5dp"
        android:text="Coefficient "
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />
    <TextView
        android:fontFamily="@font/montserrat_alternates"
        android:layout_below="@+id/coefficient_module_listview"
        android:id="@+id/note_eliminatoire_du_module_listview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingStart="20dp"

        android:layout_marginTop="7dp"
        android:text="Note eliminatoire:"
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/delete_icon_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="250dp"
        android:background="@drawable/ic_trash" />
    <ImageButton
        android:layout_marginTop="110dp"
        android:layout_marginEnd="310dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/update_icon_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pencil" />

    <ImageButton
        android:id="@+id/groupes_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/ic_registration" />

</RelativeLayout>
