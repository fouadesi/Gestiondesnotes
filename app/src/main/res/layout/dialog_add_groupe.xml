<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:inputType="text"
        android:hint="Nom du groupe"
        android:layout_width="match_parent"
        android:id="@+id/nom_du_groupe_dialog_bar"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/module_du_groupe_dialog_bar"
        android:layout_marginTop="10dp"
        android:hint="Module"
        android:layout_below="@+id/nom_du_groupe_dialog_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="number"
        android:id="@+id/annee_du_groupe_dialog_bar"
        android:layout_marginTop="10dp"
        android:hint="Annee"
        android:layout_below="@+id/module_du_groupe_dialog_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>