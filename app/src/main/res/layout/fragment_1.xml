<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment1"
    android:layout_height="600dp"
    android:paddingTop="8dp"
    android:background="@color/milk"
    android:gravity="center_vertical"

    >
    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_marginTop="80dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <de.hdodenhof.circleimageview.CircleImageView
       android:src="@drawable/e"
        android:id="@+id/image"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="120dp"/>
    <ImageButton
        android:id="@+id/upload_image"
       android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_cloud_upload_black_24dp" />
</LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Nom"
        app:boxCornerRadiusBottomEnd="10dp"
        app:counterEnabled="false"
        app:counterMaxLength="20"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="10dp"
            android:fontFamily="@font/montserrat_alternates"
            android:id="@+id/nom_du_etudiant_fragment1"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Prenom"

        app:boxCornerRadiusBottomEnd="10dp"
        app:counterEnabled="false"
        app:counterMaxLength="20"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:padding="10dp"
            android:fontFamily="@font/montserrat_alternates"
            android:id="@+id/prenom_du_etudiant_fragment1"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Email"

        app:boxCornerRadiusBottomEnd="10dp"
        app:counterEnabled="false"
        app:counterMaxLength="20"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:fontFamily="@font/montserrat_alternates"
            android:id="@+id/email_du_etudiant_email_fragment"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Numero d'isncription"
        app:boxCornerRadiusBottomEnd="10dp"
        app:counterEnabled="false"
        app:counterMaxLength="20"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        android:layout_height="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:fontFamily="@font/montserrat_alternates"
            android:id="@+id/numero_du_etudiant_fragment1"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/bg3"
       android:layout_marginTop="35dp"
       android:layout_marginStart="80dp">
       <Button
           android:layout_marginEnd="50dp"
           android:layout_marginTop="10dp"
           android:layout_gravity="end"
           android:fontFamily="@font/montserrat_alternates"
           android:id="@+id/Button_ajouter_un_eleve"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ajouter l'etudiant"
           android:textColor="@color/grey"
           android:layout_centerInParent="true"
           style="@style/Widget.MaterialComponents.Button.TextButton"
           />
   </RelativeLayout>




</LinearLayout>